<Window x:Class="FTPServertTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FTP服务端" Height="600" Width="800">
    <Grid>
        <Label Content="监听状态" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="90" FontSize="18" FontWeight="Bold"/>
        <ListBox x:Name="infoListBox" HorizontalAlignment="Left" Height="411" Margin="10,45,0,0" VerticalAlignment="Top" Width="772"/>
        <Button x:Name="startFTPButton" Content="启动FTP服务器" HorizontalAlignment="Left" Margin="105,479,0,0" VerticalAlignment="Top" Width="207" Height="57" FontSize="18" FontWeight="Bold" Background="#FF1ECD16" Click="startFTPButton_Click"/>
        <Button x:Name="stopFTPButton" Content="停止FTP服务器" HorizontalAlignment="Left" Margin="432,479,0,0" VerticalAlignment="Top" Width="215" Height="57" Background="#FFC16B14" FontSize="18" FontWeight="Bold" Click="stopFTPButton_Click" />
        <TextBox HorizontalAlignment="Left" Height="27" Margin="402,13,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="187"/>

    </Grid>
</Window>
