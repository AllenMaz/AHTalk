<Window x:Name="threadWindow" x:Class="networktest.ThreadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="线程" Height="450" Width="700">
    <Grid>
        <Button x:Name="threadStart_Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="92" Height="32" Content="启动线程" Click="threadStart_Button_Click">
        </Button>
        <Button x:Name="threadEnd_Button" Content="终止线程" HorizontalAlignment="Left" Margin="116,10,0,0" VerticalAlignment="Top" Width="92" Height="32" Click="threadEnd_Button_Click"/>
        <ScrollViewer HorizontalAlignment="Left" Height="337" Margin="10,60,0,0" VerticalAlignment="Top" Width="672">
            <TextBlock x:Name="threadInfo_TextBlock" TextWrapping="Wrap" Text="&#x9;"/>
        </ScrollViewer>
        <Label x:Name="threadLabel" Content="" HorizontalAlignment="Left" Margin="258,10,0,0" VerticalAlignment="Top" Width="158" Foreground="#FFE40909" FontSize="16"/>
        <ProgressBar x:Name="thread_ProcessBar" HorizontalAlignment="Left" Height="30" Margin="448,10,0,0" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="processLabel" Content="" HorizontalAlignment="Left" Margin="532,15,0,0" VerticalAlignment="Top" Width="72" Foreground="#FFBD3213"/>

    </Grid>
</Window>
